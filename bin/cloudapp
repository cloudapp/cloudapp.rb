#!/usr/bin/env ruby

require 'main'

# Explicitly require yaml because ruby 1.9.2 (and greater?) define YAML which
# causes main to not require it.
require 'yaml'

require 'cloudapp/drop_service'
require 'ostruct'

Main do
  config email: 'arthur@dent.com', password: 'towel'

  mode :new do

    # Bookmark a link: `cloudapp new bookmark http://getcloudapp.com`
    mode :bookmark do
      argument('url') { cast :uri }

      def run
        identity = OpenStruct.new email:    config[:email],
                                  password: config[:password]

        response = CloudApp::DropService.as_identity(identity).create url: params[:url].value
        puts response.fetch 'url'
      end
    end

    # Share a file: `cloudapp new file screenshot.png`
    mode :file do
      argument('file') { cast :pathname }

      def run
        identity = OpenStruct.new email:    config[:email],
                                  password: config[:password]

        response = CloudApp::DropService.as_identity(identity).create path: params[:file].value
        puts response.fetch 'url'
      end
    end
  end

  # List newest drops: `cloudapp list [--count=5]`
  mode :list do
    option 'count', 'n' do
      argument :optional
      cast :integer
      default 20
    end

    def run
      identity = OpenStruct.new email:    config[:email],
                                password: config[:password]

      response = CloudApp::DropService.as_identity(identity).drops params[:count].value
      puts response.map { |drop| "#{ drop['name'] } - #{ drop['url'] }" }
    end
  end

end
